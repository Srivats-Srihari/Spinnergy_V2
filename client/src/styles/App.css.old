
body {
  margin: 0;
  background: linear-gradient(145deg, #e8f6ef, #ffffff);
  font-family: 'Poppins', sans-serif;
  color: #333;
}

.app-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.navbar {
  background-color: #4caf50;
  color: white;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.links a {
  color: white;
  margin: 0 0.8rem;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s ease;
}

.links a:hover {
  color: #ffe57f;
}

.chatbot-toggle {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background: #ff9800;
  color: white;
  border: none;
  border-radius: 50%;
  padding: 0.8rem 1rem;
  font-size: 1.5rem;
  cursor: pointer;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}
