body {
  font-family: 'Segoe UI', sans-serif;
  margin: 0;
  background: #fff9f9;
  color: #333;
  text-align: center;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(90deg, #ee0979, #ff6a00);
  padding: 1rem 2rem;
  color: white;
}

.nav-links a {
  color: white;
  text-decoration: none;
  margin-left: 1rem;
  font-weight: 600;
}

.nav-links a:hover {
  text-decoration: underline;
}

.home-container {
  padding: 3rem 2rem;
}

.home-buttons button {
  margin: 1rem;
  padding: 0.7rem 1.4rem;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1.1rem;
  background: #ff6a00;
  color: white;
  transition: all 0.3s;
}

.home-buttons button:hover {
  background: #ee0979;
}
